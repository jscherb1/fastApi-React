cd frontend

# Local Development
## Build the docker image
docker build -t fastapi-react-frontend .

## Run the docker image
docker run -p 3000:3000 fastapi-react-frontend

# Deployment
#build the docker image for the ACR
docker build -t <acr_login_server>/<image_name>:<tag> .
docker build -t scherbringfastapi/fastapi-react-frontend .

## Tag the image
docker tag fastapi-react-frontend scherbringfastapi.azurecr.io/fastapi-react-frontend

## Login to the ACR
az acr login --name scherbringfastapi

## Push the image to the ACR
docker push <acr_login_server>/<image_name>:<tag>
docker push scherbringfastapi.azurecr.io/fastapi-react-frontend